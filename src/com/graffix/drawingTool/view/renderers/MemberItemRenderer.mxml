<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	<s:layout>
		<s:HorizontalLayout paddingBottom="3" paddingLeft="3" paddingRight="3" paddingTop="3"
							verticalAlign="middle"/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import com.graffix.drawingTool.vo.Statuses;
			[Bindable]
			private var statusColor:uint;
			
			override public function set data(value:Object):void
			{
				super.data = value;
				if(!data)
				{
					return;
				}
				
				switch(data.estado)
				{
					case Statuses.STATUS_DATA_ONLINE:
						statusColor = 0x00CC33;
						break;
					
					case Statuses.STATUS_DATA_AWAY:
						statusColor = 0xFFFF00;
						break;
					
					case Statuses.STATUS_DATA_LUNCH:
						statusColor = 0x33CC33;
						break;
					
					case Statuses.STATUS_DATA_RIGHTBACK:
						statusColor = 0x3300CC;
						break;
					
					default:
						statusColor = 0x00CC33;
				}
			}
		]]>
	</fx:Script>
	
	<s:Label text="{data.usuario}" width="100%"/>
	<s:Ellipse width="10" height="10">
		<s:fill>
			<s:SolidColor color="{statusColor}"/>
		</s:fill>
	</s:Ellipse>
	
</s:ItemRenderer>
