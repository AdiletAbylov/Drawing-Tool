<project name="drawr" default="buildSWC">
	<property file="build.properties" />
	<taskdef resource="flexTasks.tasks" classpath="${FLEX_TASKS}" />
	<target name="clear">
		<delete dir="${BUILD_DIR}" />
		<mkdir dir="${BUILD_DIR}" />
	</target>
	
	<target name="buildSWC" depends="clear">
		<compc output="${BUILD_DIR}/drawr.swc">
			
			<source-path path-element="${SRC_DIR}/org/graffix/drawr" />
			<include-sources dir="${SRC_DIR}" includes="org.graffix.drawr.*" />
			<include-libraries file="${LIBRARY_DIR}/TLFTextEditor.swc" />
		</compc>
	</target>
</project>
